{
  "comment": {
      "title": "Comment:",
      "type": "string",
      "format": "textarea",
      "default": ""
  },
  "yesno": {
      "default": "yes",
      "type": "string",
      "enum": [
          "yes",
          "no"
      ]
  },
  "category": {
      "default": "yes",
      "type": "string",
      "enum": [
          "spare_parts",
          "chems",
          "fuel",
          "armor",
          "other",
          "weapons"
      ]
  },
  "abstract": {
      "type": "string",
      "id": "/properties/abstract",
      "title": "Abstract",
      "default": "flamethrower_base",
      "format": "text",
      "description": "Creates an abstract item (an item that does not end up in the game and solely exists in the json to be copied-from. Use this instead of 'id'.",
      "options": {
          "hidden": false
      }
  },
  "id": {
      "type": "string",
      "id": "/properties/id",
      "title": "Id",
      "default": "46mm",
      "format": "text",
      "description": "The ID of the entry",
      "options": {
          "hidden": false
      }
  },
  "type": {
      "type": "string",
      "id": "/properties/type",
      "title": "Type",
      "format": "text",
      "readonly": true,
      "description": "The type should not be changed.",
      "options": {
          "hidden": false
      }
  },
  "name": {
    "title": "Name",
    "oneOf": [
        {
          "type": "string",
          "id": "/properties/name",
          "title": "Old format",
          "default": "Name of entry",
          "format": "text",
          "description": "The name as it will appear in-game",
          "options": {
              "hidden": false
          }
        }, 
        {
          "type": "object",
          "id": "/properties/name",
          "title": "New format",
          "format": "grid",
          "options": {
              "disable_collapse": false,
              "disable_edit_json": true,
              "disable_properties": false,
              "collapsed": false,
              "hidden": false
          },
          "defaultProperties": [
              "str"
          ],
          "properties": {
              "str": {
                  "type": "string",
                  "id": "/properties/name/properties/str",
                  "title": "Name",
                  "default": "Name of entry",
                  "description": "The name as it will appear in game",
                  "options": {
                      "hidden": false
                  }
              },
              "str_pl": {
                  "type": "string",
                  "id": "/properties/name/properties/str_pl",
                  "title": "Plural name",
                  "default": "Plural name of entry",
                  "description": "The name as it will appear in game",
                  "options": {
                      "hidden": false
                  }
              }
          }
        }
    ]
  },
  "name_plural": {
      "type": "string",
      "id": "/properties/name_plural",
      "title": "Plural name",
      "default": "Names of Entries",
      "format": "text",
      "description": "The plural name as it will appear in-game",
      "options": {
          "hidden": false
      }
  },
  "description": {
      "type": "string",
      "id": "/properties/description",
      "title": "Description",
      "default": "4.6x30mm ammunition with 31gr copper plated steel bullets.  The 4.6x30mm round was developed by H&K to compete with FN Herstal's 5.7x28mm cartridge.  It has low recoil and excellent armor penetration.",
      "format": "text",
      "description": "The description that will appear in-game",
      "options": {
          "hidden": false
      }
  },
  "weight": {
      "type": "string",
      "id": "/properties/weight",
      "title": "Weight",
      "default": "5 g",
      "format": "text",
      "description": "The weight for the item",
      "options": {
          "hidden": false
      }
  },
  "volume": {
      "type": "string",
      "id": "/properties/volume",
      "title": "Volume",
      "default": "250 ml",
      "format": "text",
      "description": "The volume of the ammo",
      "options": {
          "hidden": false
      }
  },
  "price": {
      "type": "number",
      "id": "/properties/price",
      "title": "Price",
      "default": 300,
      "description": "The price from before the cataclysm",
      "options": {
          "hidden": false
      }
  },
  "price_postapoc": {
      "type": "number",
      "id": "/properties/price_postapoc",
      "title": "Price Postapoc",
      "default": 5200,
      "description": "The price after the cataclysm",
      "options": {
          "hidden": false
      }
  },
  "material": {
      "title": "Material",
      "id": "/definitions/material",
      "oneOf": [
          {
              "type": "string",
              "default": "steel",
              "format": "text",
              "title": "Single",
              "description": "The material",
              "enum": [ "steel" ],
              "options": {
                  "hidden": false
              }
          },
          {
              "type": "array",
              "format": "selectize",
              "title": "Multiple",
              "uniqueItems": true,
              "options": {
                  "disable_collapse": false,
                  "disable_array_add": false,
                  "disable_array_delete": false,
                  "disable_array_reorder": true,
                  "disable_properties": false,
                  "collapsed": false,
                  "hidden": false
              },
              "items": {
                  "headerTemplate": "Material {{i1}}",
                  "type": "string",
                  "id": "/definitions/material/0",
                  "title": "Material",
                  "default": "steel",
                  "format": "text",
                  "description": "The material of this entry",
                  "enum": [ "steel" ],
                  "options": {
                      "hidden": false
                  }
              }
          }
      ]
  },
  "symbol": {
      "type": "string",
      "id": "/definitions/symbol",
      "title": "Symbol",
      "default": "=",
      "format": "text",
      "description": "The symbol the entry will have when there is not sprite for it.",
      "options": {
          "hidden": false
      }
  },
  "color": {
      "type": "string",
      "id": "/definitions/color",
      "title": "Color",
      "default": "dark_gray",
      "format": "text",
      "description": "The color the symbol will have when the sprite is missing. Color representing monster in-game. The color must be a valid color id",
      "options": {
          "hidden": false
      }
  },
  "count": {
      "type": "integer",
      "id": "/definitions/count",
      "title": "Count",
      "default": 40,
      "description": "The default spawn stack",
      "options": {
          "hidden": false
      }
  },
  "to_hit": {
      "type": "integer",
      "id": "/properties/to_hit",
